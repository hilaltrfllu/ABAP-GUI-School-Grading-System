DATA : BEGIN OF GS_DATA,
  MANDT TYPE MANDT,
  ZMANO TYPE ZMON_D,
  ZTOP TYPE ZTOP_D,
  ZSAN TYPE ZSAN_D,
  END OF GS_DATA.

  DATA GT_DATA Like TABLE OF gs_data.

  SELECT * FROM ZHT_MAGAZA INTO TABLE GT_DATA.

    write ''.

DATA : BEGIN OF GS_SDATA,
  MANDT TYPE MANDT,
  ZMANO TYPE ZMON_D,
  ZTOPS TYPE ZTOPS_D,
  ZSANS TYPE ZSANS_D,
  END OF GS_SDATA.

  DATA GT_SDATA LIKE TABLE OF GS_SDATA.

  SELECT * FROM ZHT_DEPO INTO TABLE GT_SDATA.



  DATA : BEGIN OF GS_TDATA,
    ZMANO TYPE ZMON_D,
    ZTOP TYPE ZTOP_D,
    ZTOPS TYPE ZTOPS_D,
    ZSAN TYPE ZSAN_D,
    ZSANS TYPE ZSANS_D,
    END OF GS_TDATA.

    DATA GT_DATA1 LIKE TABLE OF GS_TDATA.

    SELECT ZHT_MAGAZA~ZMANO ZTOP ZTOPS ZSAN ZSANS FROM ZHT_MAGAZA
      INNER JOIN ZHT_DEPO ON ZHT_DEPO~ZMANO = ZHT_MAGAZA~ZMANO
      INTO  TABLE GT_DATA1
      WHERE ZTOP = 'SARI' OR
            ZSAN = 'MOR'.
      LOOP AT GT_DATA1 INTO GS_TDATA.
        WRITE: / GS_TDATA-ZMANO, GS_TDATA-ZSAN, GS_TDATA-ZSANS, GS_TDATA-ZTOP, GS_TDATA-ZTOPS.

      ENDLOOP.
*    WRITE ''.
